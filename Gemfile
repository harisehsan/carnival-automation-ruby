source 'https://rubygems.org'

gem 'activesupport', '5.2.1'           # General purpose utility library

gem 'rspec', '3.8.0'                   # For running tests
gem 'capybara', '3.10.0'               # Toolkit for interfacing with selenium
gem 'capybara-screenshot', '1.0.22'    # Take snapshots of web page on test failures
gem 'site_prism', '3.0'                # Page Objects for Frontend/Feature Tests

gem 'selenium-webdriver', '3.14.1'     # Use selenium webdriver so we can see our tests

gem 'dotenv', '2.5.0'                  # Gem that loads contents of the .env file in as environment vars

gem 'pry'                              # Pry Debugger for Ruby
gem 'pry-byebug'                       # Adds extra functionality to pry
